# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fun_writing
DB_USER=fun_writing_user
DB_PASSWORD=secure_password_here
DB_DIALECT=postgres

# Server Configuration
PORT=3088
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# Authentication
JWT_SECRET=your_jwt_secret_key_here_min_32_chars_long
ADMIN_JWT_SECRET=your_admin_jwt_secret_key_here_min_32_chars_long
SESSION_SECRET=your_session_secret_key_here

# Test User Credentials (for development)
# Change these values for your development environment
TEST_USER_EMAIL=demo@example.com
TEST_USER_PASSWORD=demoinitialpassword
TEST_ADMIN_EMAIL=admin@example.com
TEST_ADMIN_PASSWORD=admininitialpassword

# GCP Configuration
GCP_PROJECT_ID=your_gcp_project_id
GCP_STORAGE_BUCKET=fun-writing-media-prod
GOOGLE_APPLICATION_CREDENTIALS=./backend-key.json

# AI Provider Configuration
# Google Gemini
GOOGLE_API_KEY=your_gemini_api_key_here

# Nano Banana (Image Generation)
NANO_BANANA_API_KEY=your_nano_banana_key_here
NANO_BANANA_MODEL=flux-dev

# Veo (Video Generation)
VEO_API_KEY=your_veo_api_key_here

# AI Agent URLs (Cloud Run services)
SAFETY_AGENT_URL=https://safety-agent-xxxxxx.a.run.app
PROMPT_AGENT_URL=https://prompt-agent-xxxxxx.a.run.app
FEEDBACK_AGENT_URL=https://feedback-agent-xxxxxx.a.run.app
VISUAL_MEDIA_AGENT_URL=https://visual-media-agent-xxxxxx.a.run.app

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,text/plain,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug

# Trial Configuration (days)
TRIAL_DAYS=14
TRIAL_INITIAL_CREDITS=3000
CREDIT_PER_IMAGE=100
CREDIT_PER_VIDEO=500
BONUS_CREDITS_PERFECT_SCORE=1000
